{
  "name": "backend",
  "version": "0.0.1",
  "description": "Express server",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=v16.7.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./dist/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --pretty --transpile-only ./src/index.ts",
    "db:seed": "npm run db:seed:admin && npm run db:seed:content",
    "db:seed:test": "NODE_ENV=test npm run db:seed:admin && NODE_ENV=test npm run db:seed:content",
    "db:seed:admin": "ts-node -r tsconfig-paths/register ./src/utils/seeds/createAdmin.ts",
    "db:seed:content": "ts-node -r tsconfig-paths/register ./src/utils/seeds/populate.ts",
    "prettier": "npx prettier --write ./src/",
    "prettier:check": "npx prettier --check ./src/",
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "jest --silent --runInBand",
    "test:v": "npm run test -- --verbose",
    "test:cov": "npm run test:v -- --coverage"
  },
  "keywords": [
    "express"
  ],
  "author": "Juan Wagner",
  "license": "ISC",
  "dependencies": {
    "ajv": "^8.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "mongoose": "^5.12.14",
    "multer": "^1.4.2",
    "nanoid": "^3.1.23",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.6.3",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "socket.io": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^15.0.3",
    "@types/node-fetch": "^2.5.12",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-facebook": "^2.1.11",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "jest": "^27.0.6",
    "prettier": "2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.6",
    "tsc-alias": "^1.3.8",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  }
}
